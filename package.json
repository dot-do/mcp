{
  "name": "mcp.do",
  "version": "0.1.1",
  "description": "MCP managed service - deploy MCP servers with search, fetch, and do primitives",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/templates/index.js"
    }
  },
  "bin": {
    "mcp": "./bin/mcp"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "build:all": "npm run build -w core && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:all": "npm run test -w core && npm run test",
    "lint": "eslint src",
    "dev": "wrangler dev",
    "typecheck": "tsc --noEmit"
  },
  "workspaces": [
    "core"
  ],
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260124.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^2.0.0",
    "wrangler": "^4.60.0"
  },
  "dependencies": {
    "@dotdo/mcp": "workspace:*",
    "@dotdo/oauth": "^0.1.3",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "hono": "^4.11.5",
    "jose": "^6.1.3",
    "oauth.do": "^0.2.2",
    "zod": "^4.3.6"
  }
}
